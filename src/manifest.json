{
    "name": "Sylph",
    "version": "1.5.9",
    "description": "Sylph sifts data from famous websites, and sends it to a web app for processing.",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "images/sylph32.png"
    },
    "icons": {
        "32": "images/sylph32.png",
        "128": "images/sylph128.png"
    },
    "content_scripts": [
        {
            "js": ["content.js"],
            "run_at": "document_idle",
            "matches": [
                "https://*.linkedin.com/in*", 
                "https://*.linkedin.com/jobs*", 
                "https://*.djinni.co/home/inbox*", 
                "https://*.upwork.com/ab/applicants/*", 
                "https://*.upwork.com/freelancers/*"
            ]
        },
        {
            "js": ["sift-linked.js"],
            "run_at": "document_idle",
            "matches": ["https://*.linkedin.com/in*", "https://*.linkedin.com/jobs*"]
        },
        {
            "js": ["sift-upwork.js"],
            "run_at": "document_idle",
            "matches": ["https://*.upwork.com/ab/applicants/*", "https://*.upwork.com/freelancers/*"]
        },
        {
            "js": ["sift-djinni.js"],
            "run_at": "document_idle",
            "matches": ["https://djinni.co/home/inbox/*"]
        }
    ],
    "permissions": [
        "bookmarks", "storage", "tabs", "declarativeContent"
    ],
    "host_permissions": [
        "https://script.google.com/macros/s/"
    ]
}